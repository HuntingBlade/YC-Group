<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!-- @author zhr 创建时间 2017-09-02 16:54:19-->
<mapper namespace="verifyCode_ext">
    <!--baseresult-->

    <resultMap id="BaseResultMap"   type="com.shytong.modules.verifycode.model.VerifyCodeDo">
        <id column="id" property="id" jdbcType="VARCHAR" />
        <result column="code" property="code" jdbcType="VARCHAR" />
        <result column="app_id" property="appId" jdbcType="VARCHAR" />
        <result column="phone" property="phone" jdbcType="VARCHAR" />
        <result column="type" property="type" jdbcType="VARCHAR" />
        <result column="status" property="status" jdbcType="CHAR" />
        <result column="expire_time" property="expireTime" jdbcType="TIMESTAMP" />
        <result column="gmt_create" property="gmtCreate" jdbcType="TIMESTAMP" />
        <result column="is_deleted" property="isDeleted" jdbcType="TINYINT" />
    </resultMap>

    <select id="checkIsValid" parameterType="java.util.Map" resultType="com.shytong.modules.verifycode.model.VerifyCodeDo">
      select id FROM sy_verify_code
       where
         phone=#{phone}
         and status='1'
         and expire_time>=now()
       and  code=#{code}
       and type=#{type}

    </select>

    <update id="updateOtherCodeInValid" parameterType="java.util.Map">

        update sy_verify_code set status="3 "   where
         phone=#{phone} and status="1"    and type=#{type}

    </update>
    <update id="updateCodeInValid" parameterType="java.lang.String">

        update sy_verify_code set status="2 "   where id=#{id}

    </update>

</mapper>